  <variablelist>
    <varlistentry xml:id="menus.help.user.manual">
      <term xml:id="menus.help.user.manual.title"><guimenuitem>Bedienungsanleitung...</guimenuitem> <keycombo><keycap>F1</keycap></keycombo></term>
